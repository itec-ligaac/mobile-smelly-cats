<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mcv_row_information"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="6dp"
    android:background="@android:color/white"
    app:strokeWidth="2dp"
    app:strokeColor="#EAEAEA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_row_information_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toStartOf="@+id/tv_row_information_status"
            android:textColor="@color/colorWhite"
            android:text="Description"/>

        <TextView
            android:id="@+id/tv_row_information_indication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/tv_row_information_status"
            android:layout_below="@+id/tv_row_information_description"
            android:text="Testorum"/>

        <TextView
            android:id="@+id/tv_row_information_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:text="3/7"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>